# Application
APP_NAME="Slot Machine Admin Backend"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true

# API
API_V1_PREFIX="/api/v1/admin"
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# MongoDB
MONGODB_URL="mongodb://localhost:27017,localhost:27018,localhost:27019/?replicaSet=rs0"
MONGODB_DB_NAME="slot_admin"
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_SESSION_DB=0
REDIS_CACHE_DB=1
REDIS_RATE_LIMIT_DB=2

# Security
SECRET_KEY="your-secret-key-here-change-in-production"  # Generate with: openssl rand -hex 32
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
BCRYPT_ROUNDS=12

# MFA
MFA_ISSUER_NAME="Slot Admin"
MFA_DIGITS=6
MFA_INTERVAL=30

# Rate Limiting
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW_MINUTES=15
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_API_WINDOW_MINUTES=1

# Session
SESSION_EXPIRE_MINUTES=480  # 8 hours
SESSION_INACTIVITY_MINUTES=15

# Audit Logs
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_MASK_SENSITIVE=true

# IP Whitelisting (comma-separated, empty to disable)
IP_WHITELIST=""

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # json, text

# Initial Super Admin (for seeding)
INITIAL_ADMIN_USERNAME="superadmin"
INITIAL_ADMIN_EMAIL="admin@slotadmin.com"
INITIAL_ADMIN_PASSWORD="ChangeMe123!"  # Change immediately after first login
