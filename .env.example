# ============================================
# CCPayment Configuration
# ============================================
# Get these from your CCPayment dashboard: https://admin.ccpayment.com
CCPAYMENT_APP_ID=your_app_id_here
CCPAYMENT_APP_SECRET=your_app_secret_here
CCPAYMENT_API_URL=https://admin.ccpayment.com/ccpayment/v2

# ============================================
# MongoDB Configuration
# ============================================
# Development (no auth):
MONGODB_URL=mongodb://localhost:27017
# Production (with auth - REQUIRED for production):
# MONGODB_URL=mongodb://username:password@host:port/casino_db?authSource=admin&ssl=true
DATABASE_NAME=casino_db

# ============================================
# Application Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
# IMPORTANT: Must be HTTPS in production!
WEBHOOK_URL=https://yourdomain.com/api/webhook/ccpayment

# ============================================
# Testing Mode
# ============================================
# Set to true to use mock payment processor (for development/testing only)
# MUST be false in production!
TESTING_MODE=true

# ============================================
# Telegram Configuration
# ============================================
# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ============================================
# JWT Authentication
# ============================================
# Generate a strong secret key for production:
# Run: openssl rand -hex 32
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
# Production: Set to your actual Telegram WebApp domain
ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:3000,http://localhost:8000,http://localhost:5173,https://pghome.co

# ============================================
# Authentication
# ============================================
AUTH_EXPIRATION_SECONDS=86400

# ============================================
# Logging Configuration
# ============================================
# LOG_LEVEL: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# LOG_FORMAT: 'console' for development, 'json' for production
LOG_FORMAT=console